<p style="color: green"><%= notice %></p>

<%= stylesheet_link_tag "casas", media: "all", "data-turbo-track": "reload" %>
<% require 'json' %>

<!-- Estilos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.21.1/bootstrap-table.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.21.1/bootstrap-table.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% content_for :title, "Casas" %>

<h1>CASAS</h1>

<div class="container mt-5">
  <div class="row">
    <% @casas.each do |casa| %>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><%= casa.nome %></h5>
            <p class="card-text"><%= casa.pontos %></p>

            <% imagem = case casa.nome.downcase %>
              <% when "css" then "css.png" %>
              <% when "html" then "html.png" %>
              <% when "javascript" then "js.png" %>
            <% end %>

            <% if imagem.present? %>
              <img src="<%= asset_path(imagem) %>" alt="<%= casa.nome %>" class="img-fluid mb-3 casa-imagem">
            <% end %>

            <%= link_to "Ver Casa", casa, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Nova Casa", new_casa_path, class: "btn btn-success mt-3" %>
